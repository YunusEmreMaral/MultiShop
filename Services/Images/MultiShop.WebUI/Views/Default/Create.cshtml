@model MultiShop.WebUI.DAL.Entities.ImageDrive

@{
    Layout = null;
}


<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.rtl.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

<h1 class="text-center my-4">Resim Ekleme</h1>

<div class="container">
    <form method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="Name" class="form-label">Görsel Adı</label>
            <input type="text" class="form-control" id="Name" name="Name" placeholder="Görsel adı girin" required />
        </div>

        <div class="mb-3">
            <label for="Photo" class="form-label">Görsel Fotoğrafı</label>
            <input type="file" class="form-control" id="Photo" name="Photo" required />
        </div>

        <input name="SavedUrl" type="hidden" />
        <input name="SavedFileName" type="hidden" />

        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-info">Görseli Kaydet</button>
        </div>
    </form>
</div>
